<ul class="thumbnails" id="hover-cap-4col" style="margin-left: 0; padding-left: 0" >
	<% @top_drinks.each do |drink| %>
		<li class="col-xs-3" style="list-style:none; margin-left:0px">
		  <div class="thumbnail">
		    <div class="caption">
		        <h3><%= link_to drink.name, drink_url(drink) %></h3>
		        <p><%= drink.description.split(".").shift(1).join(".") + "." %></p>
		        <p><strong rel="tooltip" title="<%= drink.average %> Rating" data-placement="auto">
		        	<% drink.average.floor.times do %>
								<i class="fa fa-star" style="color: #dd4814"></i>
							<% end %>
							<% remainder = drink.average %>

							<% while remainder >= 1 %>
								<% remainder -= 1 %>
							<% end %>
							<% if remainder >= 0.5 %>
								<i class="fa fa-star-half" style="color: #dd4814"></i>
							<% end %>
						</strong></p>
		    </div>
		    <%= filepicker_image_tag drink.filepicker_url, w: 250, h: 300 %>
		  </div>
		</li>
	<% end %>
</ul>

