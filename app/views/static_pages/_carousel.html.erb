<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators" >
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://publichousegarage.com/wp-content/uploads/2013/08/cocktail-final.jpg" width="100%" height="200">
      <div class="carousel-caption">
        <%= link_to "Polaroid artisan drinking vinegar chia kitsch", "#" %>
      </div>
    </div>
    <div class="item">
      <img src="http://www.cabbage-soup-diet.com/wp-content/uploads/2013/11/cocktails-2.jpg" width="100%" height="200">
      <div class="carousel-caption">
        <%= link_to "text etxt etset adf", "#" %>
      </div>
    </div>
    <div class="item">
      <img src="http://www.movingvenue.com/files/standard_images/cocktail1.jpg" width="100%" height="200">
      <div class="carousel-caption">
        <%= link_to "More text", "#" %>
      </div>
    </div>
  </div>
  
  <%#= render 'search_form' %>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <i class="fa fa-chevron-left fa-2x" style="padding-top: 30px"></i>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <i class="fa fa-chevron-right fa-2x" style="padding-top: 30px"></i>
  </a>
</div>