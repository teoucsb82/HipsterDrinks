<div class="container">
	<% provide(:title, @user.email) %>
	<div class="row">
		<aside class="col-xs-4">
			<section>
				<h1>
				  <%= gravatar_for @user %>
				  <%= @user.email %>
				  <br>
				  
		      <%= render 'follow_form' if logged_in? %>
				</h1>
			</section>
			<section>
				<%= render 'stats' %>
			</section>

			<section>
				<%= render 'favorite_stats' %>
				<ul>
					<% @user.favorite_drinks.each do |favdrink| %>
						<%= link_to favdrink.name, drink_url(favdrink) %>
					<% end %>
				</ul>
			</section>
		</aside>

		<div class="col-xs-8">
			<div id="favorite-drinks">
				<%= render "favoritedrinks" %>
			</div>

			<div>
				<%= render "wall" %>
				<hr>
				<%= render "shared/comments_form", commentable_id: @user.id, commentable_type: "User" %>
			</div>
	  </div>
	</div>
</div>
