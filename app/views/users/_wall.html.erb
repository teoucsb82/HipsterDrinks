<h2>My Comments Wall</h2>

<ul>
	<% @user.comments.each do |comment| %>
		<li>
			<%= comment.body %> - <em><%= User.find(comment.author_id).email %></em>
			<% if current_user.id == comment.author_id || current_user == @user %>
				<%= link_to "Delete comment", comment_url(comment), :method => :delete, class: "btn btn-xs btn-danger" %>
			<% end %>
		</li>
	<% end %>
</ul>