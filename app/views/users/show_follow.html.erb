<% provide(:title, @title) %>
<div class="row">
  <aside class="col-xs-4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>

    </section>
    <section>
      <%= render 'followers' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-xs-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>