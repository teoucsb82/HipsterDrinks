<h3>Leave A Message</h3>
<form class="form-horizontal" action="<%= comments_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="comment[commentable_id]" value="<%= commentable_id %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= commentable_type %>">

  <span class="star-rating">
    <input type="radio" name="comment[rating]" value="1"><i></i>
    <input type="radio" name="comment[rating]" value="2"><i></i>
    <input type="radio" name="comment[rating]" value="3"><i></i>
    <input type="radio" name="comment[rating]" value="4"><i></i>
    <input type="radio" name="comment[rating]" value="5"><i></i>
  </span>
  <strong class="choice">Choose a rating</strong>

  <div class="form-group">
    <label for="user-comment" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-8">
      <textarea type="textarea" name="comment[body]" class="form-control" id="user-comment" placeholder="Message (255 char max)" rows="3"></textarea>
    </div>
  </div>
 	
 	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  		<input type="submit" value="Submit Message" class="btn btn-primary">
  	</div>
  </div>
</form>