<ul class="thumbnails" id="hover-cap-4col" style="margin-left: 0; padding-left: 0" >
	<% count = 1 %>
	<% @related_drinks.each do |drink| %>
		<li class="col-xs-3" style="list-style:none; margin-left:0px">
			<% if count % 4 == 0 %>
				<br>
			<% end %>
		  <div class="thumbnail">
		    <div class="caption">
	        <h3><%= link_to drink.name, drink_url(drink) %></h3>
	        <p><%= link_to drink.logline, drink_url(drink) %></p>
	        <p><strong rel="tooltip" title="<%= drink.average %> Rating" data-placement="right">
	        	<% drink.average.floor.times do %>
							<i class="fa fa-star main-color"></i>
						<% end %>
						<% remainder = drink.average %>

						<% while remainder >= 1 %>
							<% remainder -= 1 %>
						<% end %>
						<% if remainder >= 0.5 %>
							<i class="fa fa-star-half main-color"></i>
						<% end %>
					</strong></p>
		    </div>
		    <%= filepicker_image_tag drink.filepicker_url, w: 100 %>
		    <h5 align="center" class="main-color"><%= link_to drink.name, drink_url(drink) %></h5>
		  </div>
		</li>
		<% count += 1 %>
	<% end %>
</ul>