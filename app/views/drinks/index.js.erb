$('#hover-cap-4col').append('<%= j render(@drinks) %>');
$('#hover-cap-4col .thumbnail').hover(
    function(){
        $(this).find('.caption').fadeIn(250); //.fadeIn(250)
    },
    function(){
        $(this).find('.caption').fadeOut(250); //.fadeOut(205)
    }
);    

<% if @drinks.next_page %>
	$('.pagination').replaceWith('<%= j will_paginate(@drinks) %>');
<% else %>
	$('.pagination').remove();
<% end %>