<div class="modal fade" id="addDrinkModal" tabindex="-1" role="dialog" aria-labelledby="addDrinkModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h2 class="modal-title" id="addDrinkModalLabel" align="center">Create A Cocktail</h2>
        </div>
        <div class="modal-body">
          <%= form_for(Drink.new) do |f| %>

            <div class="form-inputs">
              <%= f.label :name %>
              <%= f.text_field :name %>

              <%= f.label :description %>
              <%= f.text_field :description %>
              

              <%= f.label :filepicker_url, "Upload Pic:" %>
              <%= f.filepicker_field :filepicker_url, dragdrop: true  %>
            </div>


            <div class="modal-footer">
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
            <div class="form-actions">
              <%#= f.button :submit, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>