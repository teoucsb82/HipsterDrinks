<div class="container" style="border: 3px solid #dd4814">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-1">

			<!-- Photo -->
			<center>
				<h1><%= @drink.name %></h1>
				<% unless @drink.filepicker_url == "" || @drink.filepicker_url.nil? %>
				<%= link_to (filepicker_image_tag @drink.filepicker_url, h: 600, fit: 'clip'), @drink.filepicker_url, :target => "_blank" %>
				<br>
				<%= filepicker_save_button "Download Image", @drink.filepicker_url, "image/png", class: "btn btn-primary" %>
				<% end %>
			</center>
		</div>

		<!-- Information/Recipe -->
		<div class="col-xs-4">
				<table class="table table-bordered">
					<h4 align="right" style="border-bottom: 1px solid black; padding-bottom: 5px">featuring</h4>
					<% @drink.drink_ingredients.each do |di| %>
						<tr>
							<% parent_drink = Ingredient.find(di.ingredient_id) %>
							<td><%= di.measurement_amount %></td>
							<td><%= di.measurement_unit %></td>
							<td style="text-align:right"><%= link_to parent_drink.name, 
																							drinks_url(search: parent_drink.name) %></td>
						</tr>
						<% end %>
				</table>
		</div>
	</div>







	<%= render 'shared/facebook' %>
	<h1>Average Rating:
			<% @drink.average.floor.times do %>
				<i class="fa fa-star main-color"></i>
			<% end %>
			<% remainder = @drink.average %>
			
			<% while remainder >= 1 %>
				<% remainder -= 1 %>
			<% end %>
			<% if remainder >= 0.5 %>
				<i class="fa fa-star-half-empty main-color"></i>
			<% end %>
			
			<% (5 - @drink.average.ceil).times do %>
				<i class="fa fa-star-o main-color"></i>
			<% end %>
			<% if remainder < 0.5  && remainder > 0 %>
				<i class="fa fa-star-o main-color"></i>
			<% end %>
			<small><%= @drink.average %></small>
	</h1>
	<h3><%= @drink.comments.count %> Votes </h3>
	<%= render 'favorite_form' %>
	<hr>
	<p><h2>description</h2>
		<%= @drink.description %>
	</p>
	<p>
		Created by: <%= User.find(@drink.user_id).email %>
	</p>

<!-- 	<h2>ingredients</h2>
	<ul>
		<%# @drink.ingredients.each do |ingredient| %>
			<li><%#= ingredient.name %></li>
		<%# end %>
	</ul> -->
	
	
	<div style="border: 2px dashed black">
		<!-- review input -->
		<h1>Reviews</h1>
		<% if logged_in? && current_user.id == @drink.user_id %>
			Sorry, no reviewing your own drink!
		<% elsif logged_in? && current_user.vote_count(@drink) < 1 %>
			<%= render "shared/comments_form", commentable_id: @drink.id, commentable_type: "Drink", :flag => :new %>
		<% elsif logged_in? && current_user.vote_count(@drink) >= 1 %>
			<%= render "shared/comments_form", commentable_id: @drink.id, commentable_type: "Drink" %>
		<% else %>
			<!-- show gray'ed out form here instead -->
			You must be logged in to post a review
		<% end %>


		<!-- review section -->
		<%= render "wall" %>
	</div>

</div>

	<%= link_to "back", drinks_url %>

	<% if logged_in? && current_user.id == @drink.user_id %>
		<%= link_to 'Edit', edit_drink_path(@drink) %>
	<% end %>

